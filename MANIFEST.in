recursive-include ipyigv/static *.*
include ipyigv.json

include LICENSE
include README.md
include setup.py
include pyproject.toml
include pytest.ini
include .coverage.rc

# Javascript files
graft js
graft css
prune **/node_modules
prune coverage
prune lib

include package.json
include webpack.config.js

recursive-include ipyigv/labextension/*

# Documentation
graft docs
exclude docs/\#*
prune docs/build
prune docs/gh-pages
prune docs/dist

# Examples
graft examples

# Tests
graft tests
prune tests/build

# Javascript files
graft js
graft css
prune **/node_modules
prune coverage
prune lib

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .ipynb_checkpoints

# Data files
include public_genomes.json